{% import "_includes/forms" as forms %}

{{ forms.textField({
    label: 'Ebay User',
    instructions: 'Enter the username for which you want to get the items for',
    id: 'ebayUser',
    name: 'ebayUser',
    value: settings['ebayUser']})
}}

{{ forms.radioGroupField({
        label: "Ebay App - Environment",
        id: "ebayEnvironment",
        name: "ebayEnvironment",
        options: {
            "production": "Production",
            "sandbox": "Sandbox"
        },
        value: settings['ebayEnvironment']})
}}

{{ forms.radioGroupField({
        label: "Ebay App - Call Type",
        id: "ebayCallType",
        name: "ebayCallType",
        instructions: 'At the current time this only works with `GetSellerList`',
        options: {
